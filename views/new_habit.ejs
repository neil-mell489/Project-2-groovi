<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Habit</title>
    <link rel="stylesheet" href="/css/new_habit.css">
</head>
<body>
    <h1>new.</h1>
    <!-- Display form to create a new habit -->
    <div class="form-container">
        <form action="/submit-habit" method="POST">
            <!-- Title input -->
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required><br>

            <!-- Description input -->
            <label for="description">Description:</label>
            <input type="text" id="description" name="description" required><br>

            <!-- Container for days and time inputs -->
            <div class="day-time-container">
                <!-- Group for each day -->
                <div class="day-group">
                    <!-- Checkbox for Sunday -->
                    <input type="checkbox" id="checkSun" name="checkSun">
                    <!-- Assigning a class to the label for Sunday -->
                    <label for="checkSun" class="day-text">Sunday</label>
                    <!-- Time input for Sunday -->
                    <input type="time" id="timeSun" name="timeSun">
                </div>

                <div class="day-group">
                    <input type="checkbox" id="checkMon" name="checkMon">
                    <label for="checkMon" class="day-text">Monday</label>
                    <input type="time" id="timeMon" name="timeMon">
                </div>

                <div class="day-group">
                    <input type="checkbox" id="checkTue" name="checkTue">
                    <label for="checkTue" class="day-text">Tuesday</label>
                    <input type="time" id="timeTue" name="timeTue">
                </div>
                
                <div class="day-group">
                    <input type="checkbox" id="checkWed" name="checkWed">
                    <label for="checkWed" class="day-text">Wednesday</label>
                    <input type="time" id="timeWed" name="timeWed">
                </div>
                
                <div class="day-group">
                    <input type="checkbox" id="checkThu" name="checkThu">
                    <label for="checkThu" class="day-text">Thursday</label>
                    <input type="time" id="timeThu" name="timeThu">
                </div>
                
                <div class="day-group">
                    <input type="checkbox" id="checkFri" name="checkFri">
                    <label for="checkFri" class="day-text">Friday</label>
                    <input type="time" id="timeFri" name="timeFri">
                </div>
                
                <div class="day-group">
                    <input type="checkbox" id="checkSat" name="checkSat">
                    <label for="checkSat" class="day-text">Saturday</label>
                    <input type="time" id="timeSat" name="timeSat">
                </div>

            </div>

            <!-- Submit button -->
            <button type="submit">Submit</button>
        </form>
    </div>
</body>
</html>
