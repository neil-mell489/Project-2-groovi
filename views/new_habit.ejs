<!-- new_habit.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Habit</title>
</head>
<body>
    <h1>New Habit</h1>
    <!-- Display form to create a new habit -->
    <form action="/submit-habit" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required><br>

        <label for="description">Description:</label>
        <input type="text" id="description" name="description" required><br>

        <label for="days">Days:</label>
        <input type="text" id="days" name="days" required><br>

        <label for="times">Times:</label>
        <input type="text" id="times" name="times" required><br>

        <button type="submit">Submit</button>
    </form>

    <!-- Iterate over habits and display them -->
    <% habits.forEach(habit => { %>
        <div>
            <h3><%= habit.title %></h3>
            <p><%= habit.description %></p>
            <p>Days: <%= habit.days.join(', ') %></p>
            <p>Times: <%= habit.times.join(', ') %></p>
            <!-- Add an edit button for each habit -->
            <a href="/edit-habit/<%= habit._id %>">Edit</a>
        </div>
    <% }) %>
</body>
</html>
